if (!function_exists('dt_column_division_horario')) {

	function dt_column_division_horario($horarios = '') {
		if ($horarios > 0) {
			return '<i class="fa fa-check text-success"></i> Asignado';
		} else {
			return '<i class="fa fa-times text-danger"></i> No asignado';
		}
	}
}

