		}
		if (($this->rol->codigo === ROL_LINEA || $this->rol->codigo === ROL_CONSULTA_LINEA || $this->rol->codigo === ROL_REGIONAL) && $nivel->linea_id !== $this->rol->entidad_id) {
			show_error('No puede administrar características de niveles no asociados', 500, 'Acción no autorizada');
		}
		$this->datatables
